
     <% layout('layouts/boilerplate')%> 
     <link rel="stylesheet" type="text/css" href="registration.css">
         <% if( error.length) {%>
           <div class="col">
           <div class="alert alert-danger" role="alert">
             <%= error %> 
           </div>
         </div>
           <% } %>
           
           <div id="login">
               <div class="container">
                   <div id="login-row" class="row justify-content-center align-items-center">
                       <div id="login-column" class="col-md-6">
                           <div id="login-box" class="col-md-12">
                               <form id="password-reset-form" class="form" action="/passwordreset?_method=PUT" method="post">
                                   <h3 class="text-center text-muted">Reset Password</h3>
                                   <div class="form-group ">
                                       <label for="username" class="text-muted">Username:</label><br>
                                       <input type="text" name="username" id="username" class="form-control"    >
                                       <div id="usernameMessage" ></div>
                                   </div>
                                   <div class="form-group">
                                       <label for="secretkey" class="text-muted">Secret Key:</label><br>
                                       <input type="password" name="secretkey" id="secretkey" class="form-control"    >
                                       <div id="secretkeymessage" ></div>
                                   </div>
                                   <div class="form-group">
                                       <label for="newpassword" class="text-muted">New Password:</label><br>
                                       <input type="password" name="newpassword" id="newpassword" class="form-control" minlength="10"  >
                                       <div id="passwordConfirmationMessage" ></div>
                                   </div>
                                   <div class="form-group">
                                      
                                       <input type="submit" name="submit" class="btn btn-info btn-md" value="Reset Password" id="passwordresetsubmit" >
                                   </div>
   
                               </form>
                           </div>
                       </div>
                   </div>
               </div>
           </div> 
           <script src="./clientSide.js"></script>
   </body>
   </html>