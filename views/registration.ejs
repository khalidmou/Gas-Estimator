
     <% layout('layouts/boilerplate')%> 
  <link rel="stylesheet" type="text/css" href="registration.css">
      <% if( error.length) {%>
        <div class="col">
        <div class="alert alert-danger" role="alert">
          <%= error %> 
        </div>
      </div>
        <% } %>
        <div id="login">
            <div class="container">
                <div id="login-row" class="row justify-content-center align-items-center">
                    <div id="login-column" class="col-md-6">
                        <div id="login-box" class="col-md-12">
                            <form id="login-form" class="form" action="/register" method="post">
                                <h3 class="text-center text-muted">Register</h3>
                                <div class="form-group ">
                                    <label for="username" class="text-muted">Username:</label><br>
                                    <input type="text" name="username" id="username" class="form-control"    >
                                    <div id="usernameMessage" ></div>
                                </div>
                                <div class="form-group">
                                    <label for="password" class="text-muted">Password:</label><br>
                                    <input type="password" name="password" id="password" class="form-control"    >
                                    <div id="passwordMessage" ></div>
                                </div>
                                <div class="form-group">
                                    <label for="confirm-password" class="text-muted">Confirm Password:</label><br>
                                    <input type="password" name="confirm-password" id="confirm-password" class="form-control"  >
                                    <div id="passwordConfirmationMessage" ></div>
                                </div>
                                <div class="form-group">
                                   
                                    <input type="submit" name="submit" class="btn btn-info btn-md" value="Register" id="registrationsubmit" >
                                </div>

                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div> 
        <script src="./clientSide.js"></script>
</body>
</html>